<?xml version="1.0" encoding="utf-8"?>
<manifest package="hearsilent.kuas.food"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

	<application
		android:name=".base.App"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="false"
		android:theme="@style/AppTheme">
		<activity
			android:name=".SplashActivity"
			android:screenOrientation="portrait"
			android:theme="@style/SplashTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".MainActivity"
			android:screenOrientation="portrait"
			android:theme="@style/StarWarsAppTheme"/>
		<activity
			android:name=".ShopDetailActivity"
			android:screenOrientation="portrait"
			android:theme="@style/ShopsDetailTheme"/>
		<activity
			android:name=".ShopsActivity"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".OpenSourceActivity"
			android:label="@string/open_source"
			android:screenOrientation="portrait"
			android:theme="@style/OpenSourceTheme"/>

		<meta-data
			android:name="com.google.android.gms.version"
			android:value="@integer/google_play_services_version"/>
	</application>

</manifest>